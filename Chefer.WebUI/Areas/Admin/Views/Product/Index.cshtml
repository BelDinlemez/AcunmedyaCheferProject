@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Ürünler</h1>

<h3>Kategoriler</h3>

@{
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ürün Adı</th>
        <th>Fiyatı</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>



    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th><img src="@item.ImageUrl" alt="Ürün Görseli" style="width:75px; height:75px" /></th>
            <th>@item.ProductName</th>
            <th>@item.Price</th>
            <th>@item.Category.CategoryName</th>
            <th>
                <a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a>
                <a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a>

            </th>
        </tr>

    }

</table>

<a href="/Admin/Product/CreateProduct" class="btn btn-success">Yeni Ürün Oluştur</a>