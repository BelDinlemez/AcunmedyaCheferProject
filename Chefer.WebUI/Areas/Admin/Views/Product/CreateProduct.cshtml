@model CreateProductDto
@{
	ViewData["Title"] = "CreateProduct";
}

<h1>Yeni Ürün Oluştur</h1>

<form method="post">

	<div class="form-group">
		<label>Ürün Adı</label>
		<input type="text" asp-for="ProductName" class="form-control" />
	</div>


	<div class="form-group">
		<label>Ürün Görsel Url</label>
		<input type="text" asp-for="ImageUrl" class="form-control" />
	</div>

	<div class="form-group">
		<label>Ürün Fiyatı</label>
		<input type="text" asp-for="Price" class="form-control" />
	</div>


	<div class="form-group">
		<label>Kategori</label>
		<select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control" >
		<option selected diabled>Kategori Seçiniz</option>
		</select>
	</div>
	<button class="btn btn-outline-primary">Kaydet</button>

</form>